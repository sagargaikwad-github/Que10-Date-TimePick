    <Button
        android:id="@+id/compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/black"
        android:text="Compare"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timepick2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/timepick2"
        app:layout_constraintTop_toBottomOf="@+id/timepick2"
        app:layout_constraintVertical_bias="0.651" />

    <TextView
        android:id="@+id/result"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="#CD2626"
        android:gravity="center"
        android:text="Results"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/timepick1"
        app:layout_constraintStart_toStartOf="@+id/timepick1"
        app:layout_constraintTop_toBottomOf="@+id/timepick1" />

